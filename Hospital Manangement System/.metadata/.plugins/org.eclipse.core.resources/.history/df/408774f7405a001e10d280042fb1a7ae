package com.hms.billingms.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import com.paypal.base.rest.APIContext;

@Configuration
public class AppConfig {
	
	
	@Bean
	public APIContext apiContext() {
		APIContext apiContext = new APIContext(Messages.getString("paypal.client.id"), Messages.getString("paypal.client.secret"), Messages.getString("paypal.mode")); //$NON-NLS-1$ //$NON-NLS-2$ //$NON-NLS-3$
		return apiContext;
	}
}
