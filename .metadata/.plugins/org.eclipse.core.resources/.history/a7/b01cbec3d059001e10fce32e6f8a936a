package com.hms.authms.service;

import org.springframework.security.core.userdetails.UsernameNotFoundException;

import com.hms.authms.dto.AddUserRequest;
import com.hms.authms.dto.UpdateUserRequest;
import com.hms.authms.dto.UserDetailsResponse;

public interface IUserService {

	UserDetailsResponse saveUser(AddUserRequest addUserRequest);

	UserDetailsResponse updateUser(UpdateUserRequest updateUserRequest) throws UsernameNotFoundException;

	UserDetailsResponse getUserDetailsByEmail(String email) throws UsernameNotFoundException;

}
