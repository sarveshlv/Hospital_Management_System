package com.hms.hospitalms.util;

import com.hms.hospitalms.dto.AddHospitalRequest;
import com.hms.hospitalms.entities.Hospital;
import com.hms.hospitalms.entities.Hospital.HospitalType;

public class HospitalUtil {

	public static boolean isValidHospitalType(String input) {
	    for (HospitalType type : HospitalType.values()) {
	        if (type.name().equalsIgnoreCase(input)) {
	            return true;
	        }
	    }
	    return false;
	}
}
