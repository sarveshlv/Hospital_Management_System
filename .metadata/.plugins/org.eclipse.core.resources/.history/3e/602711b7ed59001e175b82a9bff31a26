# Spring Cloud Gateway Configuration

# Specify the port on which Spring Cloud Gateway will listen for incoming requests
server.port=8080

# Set the name of your Spring Cloud Gateway application
spring.application.name=gateway-service

# Specify the URL of the Eureka server for service discovery
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/

# Define the route for routing requests to the "USERMS" service
spring.cloud.gateway.routes[0].id=authms_route
spring.cloud.gateway.routes[0].uri=lb://userms
spring.cloud.gateway.routes[0].predicates[0]=Path=/api/userms/**


spring.cloud.gateway.routes[1].id=hospitalms_route
spring.cloud.gateway.routes[1].uri=lb://hospitalms
spring.cloud.gateway.routes[1].predicates[0]=Path=/api/hospitals/**
spring.cloud.gateway.routes[1].filters[0] = JwtFilter

spring.cloud.gateway.routes[2].id=bedms_route
spring.cloud.gateway.routes[2].uri=lb://bedms
spring.cloud.gateway.routes[2].predicates[0]=Path=/api/beds/**
spring.cloud.gateway.routes[2].filters[0] = JwtFilter

spring.cloud.gateway.routes[3].id=patients_route
spring.cloud.gateway.routes[3].uri=lb://patientms
spring.cloud.gateway.routes[3].predicates[0]=Path=/api/patients/**
spring.cloud.gateway.routes[3].filters[0] = JwtFilter

spring.cloud.gateway.routes[4].id=bookings_route
spring.cloud.gateway.routes[4].uri=lb://bookingms
spring.cloud.gateway.routes[4].predicates[0]=Path=/api/bookings/**
spring.cloud.gateway.routes[4].filters[0] = JwtFilter

spring.cloud.gateway.routes[5].id=bookings_route
spring.cloud.gateway.routes[5].uri=lb://billingms
spring.cloud.gateway.routes[5].predicates[0]=Path=/api/billingms/**
spring.cloud.gateway.routes[5].filters[0] = JwtFilter
