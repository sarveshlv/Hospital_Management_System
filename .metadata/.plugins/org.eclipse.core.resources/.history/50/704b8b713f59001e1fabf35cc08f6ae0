/**
 * This class represents the entity for a hospital bed in the Bed Management System (BedMS).
 * It is used to store information about each bed, including its type, status, and cost per day.
 *
 * @author prateek
 */
package com.hms.bedms.entities;

import org.springframework.data.annotation.Id;
import org.springframework.data.mongodb.core.mapping.Document;

import lombok.EqualsAndHashCode;
import lombok.Getter;
import lombok.Setter;
import lombok.ToString;

/**
 * The {@code Bed} class is an entity class that maps to a MongoDB collection named "beds."
 */
@Getter
@Setter
@ToString
@EqualsAndHashCode
@Document(collection = "beds")
public class Bed {
    /**
     * The unique identifier for the bed.
     */
    @Id
    private String id;

    /**
     * The ID of the hospital to which the bed belongs.
     */
    private String hospitalId;

    /**
     * The type of bed, which can be one of the following:
     * - USUAL_BED
     * - ICU_BED
     * - OXYGEN_BED
     * - VENTILATOR_BED
     */
    private BedType bedType;

    /**
     * The status of the bed, which can be one of the following:
     * - AVAILABLE
     * - BOOKED
     * - CANCELLED
     */
    private BedStatus bedStatus;

    /**
     * The cost per day for reserving the bed.
     */
    private Double costPerDay;

    /**
     * An enumeration representing the various types of beds available.
     */
    public enum BedType {
        USUAL_BED, ICU_BED, OXYGEN_BED, VENTILATOR_BED
    }

    /**
     * An enumeration representing the possible statuses of a bed.
     */
    public enum BedStatus {
        AVAILABLE, BOOKED, CANCELLED
    }
}