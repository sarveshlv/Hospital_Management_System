/**
 * This class defines a Spring configuration for creating a RestTemplate bean.
 * RestTemplate is used for making HTTP requests in the Bed Management System (BedMS).
 *
 * @author prateek
 */
package com.hms.patienthms.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.web.client.RestTemplate;

/**
 * The {@code RestTemplateConfig} class is responsible for configuring and creating a RestTemplate bean.
 */
@Configuration
public class RestTemplateConfig {
    /**
     * Creates and configures a RestTemplate bean.
     *
     * @return A RestTemplate instance that can be used for making HTTP requests.
     */
    @Bean
    public RestTemplate restTemplate() {
        return new RestTemplate();
    }
}
