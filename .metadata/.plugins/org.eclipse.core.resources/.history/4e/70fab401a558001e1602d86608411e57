package com.hms.bookingms.dto;

/**
 * This class represents the entity for a hospital bed in the Bed Management System (BedMS).
 * It is used to store information about each bed, including its type, status, and cost per day.
 *
 * @author prateek
 */
package com.hms.bedms.entities;

import org.springframework.data.annotation.Id;
import org.springframework.data.mongodb.core.mapping.Document;

import lombok.EqualsAndHashCode;
import lombok.Getter;
import lombok.Setter;
import lombok.ToString;

/**
 * The {@code Bed} class is an entity class that maps to a MongoDB collection named "beds."
 */
@Getter
@Setter
@ToString
@EqualsAndHashCode
public class Bed {
    private String id;
    private String hospitalId;
    private String bedType;
    private String bedStatus;
    private Double costPerDay;
}