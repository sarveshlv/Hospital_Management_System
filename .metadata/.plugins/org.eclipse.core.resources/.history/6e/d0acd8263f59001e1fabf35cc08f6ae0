/**
 * This class represents a hospital entity in the Hospital Management System (HMS).
 * It contains information about the hospital, including its name, verification status, type, contact number, and address.
 *
 * @author prateek
 */
package com.hms.bedms.dtos;

import lombok.AllArgsConstructor;
import lombok.EqualsAndHashCode;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

/**
 * The {@code Hospital} class is an entity class that represents a hospital in the system.
 */
@Getter
@Setter
@ToString
@EqualsAndHashCode
public class Hospital {
    /**
     * The unique identifier for the hospital.
     */
    private String id;

    /**
     * The name of the hospital.
     */
    private String name;

    /**
     * Indicates whether the hospital is verified or not.
     */
    private Boolean verified;

    /**
     * The type of the hospital, which can be one of the following:
     * - GOVT
     * - PRIVATE
     * - SEMI_PRIVATE
     */
    private String hospitalType;

    /**
     * The contact number of the hospital.
     */
    private Long contactNo;

    /**
     * The address of the hospital, including city, state, and pincode.
     */
    private Address address;

    /**
     * Inner class representing the address of the hospital.
     */
    @Getter
    @Setter
    @NoArgsConstructor
    @AllArgsConstructor
    @ToString
    @EqualsAndHashCode
    public static class Address {
        /**
         * The city where the hospital is located.
         */
        private String city;

        /**
         * The state where the hospital is located.
         */
        private String state;

        /**
         * The pincode or postal code of the hospital's location.
         */
        private Long pincode;
    }

    /**
     * An enumeration representing the possible types of hospitals.
     */
    public enum HospitalType {
        GOVT, PRIVATE, SEMI_PRIVATE
    }
}
