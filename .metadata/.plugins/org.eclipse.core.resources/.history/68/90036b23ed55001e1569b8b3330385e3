package com.hms.bedms.dtos;

public class AddBedRequest {
	@NotBlank(message = "hospitalId is required")
    private String hospitalId;

    @NotBlank(message = "bedType is required")
    @Pattern(regexp = "^(USUAL_BED|ICU_BED|OXYGEN_BED|VENTILATOR_BED)$", message = "Invalid bedType")
    private String bedType;

    @NotBlank(message = "bedStatus is required")
    @Pattern(regexp = "^(AVAILABLE|BOOKED|CANCELLED)$", message = "Invalid bedStatus")
    private String bedStatus;

    @Positive(message = "costPerDay must be a positive number")
    private Double costPerDay;
}
