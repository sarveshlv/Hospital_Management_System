package com.hms.hospitalms.controller;

import com.hms.hospitalms.dto.AddHospitalRequest;
import com.hms.hospitalms.entities.Hospital;
import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.*;

import jakarta.validation.Valid;
import jakarta.validation.constraints.Digits;
import jakarta.validation.constraints.NotNull;
import java.util.List;

@FeignClient(name = "hospital-service", url = "${hospital.service.url}") // Specify the target service name and URL
public interface HospitalFeignClient {

    @PostMapping("/api/hospitals/add")
    Hospital addHospital(@Valid @RequestBody AddHospitalRequest addHospitalRequest);

    @PutMapping("/api/hospitals/update/{id}")
    Hospital updateHospital(@PathVariable String id, @Valid @RequestBody AddHospitalRequest addHospitalRequest);

    @GetMapping("/api/hospitals/find/{id}")
    Hospital getHospitalById(@PathVariable String id);

    @DeleteMapping("/api/hospitals/delete/{id}")
    Hospital deleteHospitalById(@PathVariable String id);

    @GetMapping("/api/hospitals/verified/{id}")
    Boolean isHospitalVerified(@PathVariable String id);

    @PutMapping("/api/hospitals/verify/{id}")
    Hospital verifyHospital(@PathVariable String id);

    @GetMapping("/api/hospitals/nearby/{pincode}")
    List<Hospital> getNearbyHospitals(
            @NotNull(message = "Pincode is required") @Digits(integer = 6, fraction = 0, message = "Pincode must be a 6-digit number") @PathVariable Long pincode);
}
