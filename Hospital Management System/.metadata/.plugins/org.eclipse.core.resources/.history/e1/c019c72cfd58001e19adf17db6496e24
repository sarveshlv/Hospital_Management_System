package com.hms.bedms.service;
import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;
import java.util.List;

@FeignClient(name = "hospital-service", url = "http://HOSPITALMS/api/hospitals")
public interface HospitalServiceClient {

    @GetMapping("/find/{hospitalId}")
    boolean isHospitalFound(@PathVariable("hospitalId") String hospitalId);

    @GetMapping("/nearby/{pincode}")
    List<Hospital> getNearbyHospitals(@PathVariable("pincode") Long pincode);
}
