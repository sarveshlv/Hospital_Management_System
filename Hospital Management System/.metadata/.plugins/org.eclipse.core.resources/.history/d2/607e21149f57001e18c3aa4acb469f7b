package com.hms.hospitalms.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.client.HttpClientErrorException;
import org.springframework.web.client.RestTemplate;


public class UserApiService {
	@Autowired
    private RestTemplate restTemplate;

    public UserApiService(RestTemplate restTemplate) {
        this.restTemplate = restTemplate;
    }

    public boolean addRefrence(String hospitalId)  {
    	String addReferenceUrl = "http://localhost:8080/api/users/addReference/" + hospitalId;
        try {
            return restTemplate.getForObject(addReferenceUrl, Boolean.class);
        } catch (HttpClientErrorException.NotFound e) {
            throw new HttpClientErrorException("Service not found : " + e.getMessage());
        } catch (Exception e) {
            throw new RuntimeException("Error while checking if hospital exists: " + e.getMessage());
        }
    }
}
