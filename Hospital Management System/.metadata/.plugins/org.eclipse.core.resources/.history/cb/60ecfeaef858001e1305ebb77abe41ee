package com.hms.bookingms.service;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.GetMapping;

@FeignClient(name = "bed-service", url = "http://BEDMS/api/beds")
public interface BedServiceClient {

    @PutMapping("/bookBed/{bedId}")
    void bookBed(@PathVariable("bedId") String bedId);

    @PutMapping("/unbookBed/{bedId}")
    void unbookBed(@PathVariable("bedId") String bedId);

    @GetMapping("/findByType/{bedType}")
    List<Bed> findBedsByType(@PathVariable("bedType") BedType bedType);
}

