package com.hms.hospitalms.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.client.HttpClientErrorException;
import org.springframework.web.client.RestTemplate;

import com.hms.bedms.dtos.Hospital;

public class UserApiService {
	@Autowired
    private RestTemplate restTemplate;

    public UserApiService(RestTemplate restTemplate) {
        this.restTemplate = restTemplate;
    }

    public boolean addRefrence(String patientId)  {
    	String addReferenceUrl = "http://localhost:8080/api/users/addReference/" + patientId;
        try {
            restTemplate.getForObject(addReferenceUrl);
            return true;
        } catch (HttpClientErrorException.NotFound e) {
            throw new RuntimeException("Service not found : " + e.getMessage());
        } catch (Exception e) {
            throw new RuntimeException("Error while checking if hospital exists: " + e.getMessage());
        }
    	addRefrence
    }
}
