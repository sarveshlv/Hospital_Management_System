package com.hms.bookingms.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Component;
import org.springframework.web.client.HttpClientErrorException;
import org.springframework.web.client.RestTemplate;

@Component
public class PatientApiService {
	@Autowired
	private RestTemplate restTemplate;
	
	public boolean isPatientFound(String patientId) throws RuntimeException {
		String checkPatientUrl = "http://localhost:8080/api/patients/find/" + hospitalId;
		try {
			ResponseEntity<Void> responseEntity = restTemplate.getForEntity(checkPatientUrl, Void.class);
			return responseEntity.getStatusCode() == HttpStatus.OK;
		} catch (HttpClientErrorException.NotFound e) {
			return false;
		} catch (Exception e) {
			throw new RuntimeException("Error while checking if Patient exists: " + e.getMessage());
		}
	}
}
