package com.hms.authms.utility;

import org.springframework.stereotype.Component;

import com.hms.authms.dto.UserDetailsResponse;
import com.hms.authms.entity.User;

@Component
public class ServiceUtility {
	public static UserDetailsResponse getUserDetailsResponse(User user) {

		UserDetailsResponse userDetailsResponse = new UserDetailsResponse();
		userDetailsResponse.setId(user.getId());
		userDetailsResponse.setFirstName(user.getFirstName());
		userDetailsResponse.setLastName(user.getLastName());
		userDetailsResponse.setEmail(user.getEmail());
		userDetailsResponse.setRole(user.getRole());

		return userDetailsResponse;
	}
}
